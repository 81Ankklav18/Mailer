<Window x:Class="MailerClient.CreateMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailerClient"
        mc:Ignorable="d"
        Title="CreateMail" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="20 8 20 8" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <TextBlock>Заголовок сообщения</TextBlock>
        <TextBox Name="message_name"/>
        <TextBlock>Адресат</TextBlock>
        <TextBox Name="addressee"/>
        <TextBlock>Тэги</TextBlock>
        <TextBox Name="tags"/>
        <TextBlock>Сообщение</TextBlock>
        <TextBox Name="message" Height="250"/>
        <Button Content="Отправить" Click="Button_Click"/>
    </StackPanel>
</Window>
